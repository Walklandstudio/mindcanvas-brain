{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "recharts": ["./types/recharts"]   // use our local shim for types
    },

    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,

    "types": ["node"],                    // ⬅️ removed 'react/next' and 'react-dom/next'
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "app",
    "components",
    "pages",
    "lib",
    "types",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", ".next", "dist", "out"]
}
