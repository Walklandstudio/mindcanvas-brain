{
  "name": "mindcanvas-brain",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace @mindcanvas/web run dev",
    "build:web": "npm --workspace @mindcanvas/web run build",
    "start:web": "npm --workspace @mindcanvas/web run start",
    "dev:portal": "npm --workspace @mindcanvas/portal run dev || echo 'portal not wired yet'",
    "build:portal": "npm --workspace @mindcanvas/portal run build || true",
    "start:portal": "npm --workspace @mindcanvas/portal run start || true"
  }
}
