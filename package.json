{
  "name": "mindcanvas-brain",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:web": "npm --workspace @mindcanvas/web run dev",
    "build:web": "npm --workspace @mindcanvas/web run build",
    "start:web": "npm --workspace @mindcanvas/web run start",
    "dev:portal": "npm --workspace @mindcanvas/portal run dev",
    "build:portal": "npm --workspace @mindcanvas/portal run build",
    "start:portal": "npm --workspace @mindcanvas/portal run start",
    "typecheck": "npm -ws run typecheck || true"
  },
  "engines": { "node": ">=18.18 <21" }
}
